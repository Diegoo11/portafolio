---
import { Image } from "astro:assets";

const data = [
  {
    label: "Apellidos",
    content: "NOA CAMINO",
  },
  {
    label: "Nombres",
    content: "YENARO JOEL",
  },
  {
    label: "Domicilio",
    content: "AREQUIPA PERU",
  },
  {
    label: "Soy",
    content: "DESARROLLO WEB",
  },
];

const boxes = [
  {
    label: "Fecha Inscripcion",
    date: "08/01/2022",
  },
  {
    label: "Fecha Emision",
    date: "09/11/2023",
  },
  {
    label: "Fecha caducidad",
    date: "31/12/2024",
  },
];
---
<div class="w-full flex justify-start items-center">
  <div class="border-4 border-solid border-black rounded-2xl flex gap-10 md:gap-0 flex-col md:grid grid-cols-10 w-full max-w-sm md:max-w-3xl my-10 p-5 lg:p-10">
    <div class="flex flex-col md:col-span-3 justify-start items-center md:items-start gap-4">
      <Image
        width="120"
        height="160"
        src="/perfil43.jpg"
        alt="foto de perfil"
        class="w-10/12 rounded-md border-2 border-solid border-black"
      />
    </div>
    <div class="md:col-span-4 flex flex-col gap-2">
      {
        data.map((d) => (
          <div class="flex flex-col">
            <span class="text-xl md:text-base lg:text-xl">
              {d.label}
            </span>
            <span class="font-bold text-2xl md:text-lg lg:text-2xl mt-[-6px]">
              {d.content}
            </span>
          </div>
        ))
      }
    </div>
    <div class="md:col-span-3 md:flex justify-end items-start hidden">
      <div class="w-36 flex flex-col font-semibold border-2 border-solid border-black border-b-0">
        {
          boxes.map((d) => (
            <div class="flex flex-col justify-center items-center border-b-2 border-solid border-black">
              <span class="text-xs lg:text-base">
                {d.label}
              </span>
              <span class="font-bold">
                {d.date}
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>